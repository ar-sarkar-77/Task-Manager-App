<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZenTask To-do Manager"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:gravity="center"
                android:textColor="?attr/android:textColor"/>
        </LinearLayout>

        <!-- About the App Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="5dp"
            app:cardBackgroundColor="?attr/android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About the App"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:textColor="?attr/android:textColor"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ZenTask To-do Manager is a smart, offline task management application designed to help you organize your daily tasks, notes, and to-dos efficiently. With a simple interface and powerful notes tools, this app ensures that you can stay productive and never miss a deadline.\n\nUnlike other task apps, ZenTask To-do Task Manager stores all your data locally on your device, giving you full privacy and control over your tasks. No personal information is collected, transmitted, or shared with third parties."
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="8dp"
                    android:textColor="?attr/android:textColorSecondary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Key Features Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="5dp"
            app:cardBackgroundColor="?attr/android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key Features"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:textColor="?attr/android:textColor"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• ZenTask To-do Management: Create, edit, and delete tasks easily. Keep track of your daily, weekly, and monthly tasks with due dates.\n\n• Offline Mode: Works completely offline. You don’t need an internet connection to add or manage your tasks.\n\n• Local Data Storage: All tasks and notes are stored on your device. Your data never leaves your phone, ensuring full privacy.\n\n• Search and Filter: Quickly find tasks using the search bar and sort by title or due date for easy management.\n\n• Clean and Intuitive Interface: Simple design that’s easy to navigate. Focus on your tasks without distraction.\n\n• Task Status Tracking: Mark tasks as complete or pending. Keep track of progress efficiently.\n\n• No Ads or Analytics: Enjoy a clean, ad-free experience without any third-party tracking."
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="?attr/android:textColorSecondary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
